<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/iv_shadow"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:backgroundTint="@color/g_green"
        app:cardElevation="0dp"
        app:cardCornerRadius="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/iv_color"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@color/g_gray500"
        android:backgroundTint="@color/gray85"
        app:cardCornerRadius="6dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="@id/iv_shadow"
        app:layout_constraintTop_toTopOf="@id/iv_shadow"
        app:layout_constraintEnd_toEndOf="@id/iv_shadow"
        app:layout_constraintBottom_toBottomOf="@id/iv_shadow"/>

    <TextView
        android:id="@+id/tv_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_check"
        app:layout_constraintStart_toStartOf="@id/iv_color"
        app:layout_constraintEnd_toEndOf="@id/iv_color"
        app:layout_constraintTop_toTopOf="@id/iv_color"
        app:layout_constraintBottom_toBottomOf="@id/iv_color"
        android:textColor="@color/g_green"
        android:text="S"
        android:textSize="12sp"
        android:textAlignment="center"
/>

</androidx.constraintlayout.widget.ConstraintLayout>