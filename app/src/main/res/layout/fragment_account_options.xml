<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="50dp">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie"
            android:layout_width="400dp"
            android:layout_height="400dp"
            app:layout_constraintBottom_toTopOf="@id/btn_accounts_options_register"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/lottie_login"
            app:layout_constraintVertical_chainStyle="packed"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_accounts_options_register"
            android:layout_width="0dp"
            android:layout_height="@dimen/buttom_medium_height"
            style="@style/blueButtonStyle"
            app:layout_constraintTop_toBottomOf="@id/lottie"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_accounts_options_login"

            android:layout_marginBottom="20dp"
            android:text="Register"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_accounts_options_login"
            android:layout_width="0dp"
            android:layout_height="@dimen/buttom_medium_height"
            style="@style/whiteButtonStyle"
            android:textColor="@color/g_green"
            app:layout_constraintTop_toBottomOf="@id/btn_accounts_options_register"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Login"/>


</androidx.constraintlayout.widget.ConstraintLayout>